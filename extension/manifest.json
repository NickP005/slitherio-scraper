{
  "manifest_version": 3,
  "name": "Slither.io ESN Data Collector",
  "version": "1.0.0",
  "description": "Real-time data collection for Echo State Network training from Slither.io gameplay",
  "author": "Niccol√≤ Pagano",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "*://slither.io/*",
    "*://slither.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://slither.io/*", "*://slither.com/*"],
      "js": ["content/data-collector.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Slither.io Data Collector"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content/injected-script.js"],
      "matches": ["*://slither.io/*", "*://slither.com/*"]
    }
  ]
}